# AI LLM配置 - 使用Google Gemini（推荐）
GOOGLE_API_KEY=your-google-api-key-here

# LLM配置
LLM_PROVIDER=google
LLM_MODEL=gemini-flash-latest# 快速且经济

# 浏览器配置
# HEADLESS=false  显示浏览器窗口（推荐，便于调试和观察AI操作）
# HEADLESS=true   隐藏浏览器窗口（生产环境使用）
HEADLESS=false  # 默认使用有头模式
MAX_CONCURRENT_BROWSERS=3

# 爬虫配置
XHS_MAX_NOTES=10
MAX_SCRAPE_TIMEOUT=300  # AI爬取最大超时(秒)

# 代理配置（可选）
# PROXY_URL=http://proxy.example.com:8080

# 日志配置
# 日志级别: DEBUG, INFO, WARNING, ERROR
# DEBUG: 显示所有日志（包括详细调试信息）
# INFO: 显示常规信息（推荐用于开发）
# WARNING: 只显示警告和错误（推荐用于生产）
LOG_LEVEL=INFO

# 数据库配置
DB_PATH=data/db/travel_planner.db
CACHE_DIR=data/cache
